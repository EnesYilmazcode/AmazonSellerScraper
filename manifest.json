{
    "manifest_version": 3,
    "name": "Amazon Seller Scraper",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "*://*.amazon.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.amazon.com/*"],
            "js": ["contentscript.js"]
        }
    ]
}
